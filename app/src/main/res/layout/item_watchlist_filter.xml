<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_height="@dimen/list_item_default_height"
    tools:layout_width="match_parent"
    tools:parentTag="android.widget.LinearLayout">

    <org.wikipedia.views.LangCodeView
        android:id="@+id/watchlist_filter_language_code"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="-10dp"
        android:contentDescription="@null"
        app:textColor="?attr/placeholder_color"
        app:backgroundTint="?attr/placeholder_color"  />

    <ImageView
        android:id="@+id/watchlist_filter_wiki_logo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="-10dp"
        android:contentDescription="@null"
        android:scaleType="center"
        android:layout_gravity="center_vertical"
        app:tint="?attr/placeholder_color" />

    <TextView
        android:id="@+id/watchlist_filter_title"
        style="@style/P"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:paddingStart="24dp"
        android:paddingEnd="8dp"
        android:textColor="?attr/primary_color"
        tools:text="Lorem ipsum" />

    <ImageView
        android:id="@+id/watchlist_filter_check"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="14dp"
        android:contentDescription="@null"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_check_borderless"
        app:tint="?attr/progressive_color" />

</merge>