<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_height="@dimen/list_item_default_height"
    tools:layout_width="match_parent"
    tools:parentTag="android.widget.LinearLayout">

    <TextView
        android:id="@+id/wiki_language_order"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="6dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="?attr/placeholder_color"
        android:textSize="14sp"
        tools:text="1" />

    <CheckBox
        android:id="@+id/wiki_language_checkbox"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="-8dp"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/wiki_language_code"
        style="@style/TextViewCentered"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="24dp"
        android:background="@drawable/lang_button_shape_border"
        android:fontFamily="sans-serif-medium"
        android:minWidth="24dp"
        android:paddingHorizontal="2dp"
        android:textAllCaps="true"
        android:textColor="?attr/placeholder_color" />

    <TextView
        android:id="@+id/wiki_language_title"
        style="@style/P.MaterialListTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        tools:text="Lorem ipsum" />

    <ImageView
        android:id="@+id/wiki_language_drag_handle"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_draggable"
        app:tint="?attr/placeholder_color" />

</merge>
