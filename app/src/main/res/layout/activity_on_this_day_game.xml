<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/paper_color">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        style="@style/ToolbarStyle.Small"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:indeterminate="true" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/currentQuestionContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        android:animateLayoutChanges="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:animateLayoutChanges="true"
        android:layout_marginTop="?attr/actionBarSize">

        <ImageView
            android:id="@+id/questionThumbnail"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="-16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@null"
            android:scaleType="centerCrop" />

        <View
            android:id="@+id/questionDotLine"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?attr/inactive_color"
            android:layout_marginHorizontal="4dp"
            app:layout_constraintStart_toStartOf="@id/questionDotsFlow"
            app:layout_constraintEnd_toEndOf="@id/questionDotsFlow"
            app:layout_constraintTop_toTopOf="@id/questionDotsFlow"
            app:layout_constraintBottom_toBottomOf="@id/questionDotsFlow" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/questionDotsFlowPulse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:flow_horizontalBias="0"
            app:flow_horizontalGap="16dp"
            app:flow_verticalAlign="center"
            app:flow_wrapMode="chain" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/questionDotsFlow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:flow_horizontalBias="0"
            app:flow_horizontalGap="16dp"
            app:flow_verticalAlign="center"
            app:flow_wrapMode="chain" />

        <TextView
            android:id="@+id/questionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/questionDotsFlow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:textColor="?attr/primary_color"
            android:fontFamily="serif"
            android:textSize="24sp"
            tools:text="Lorem ipsum"/>

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/yearButtonsFlow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:flow_horizontalBias="0"
            app:flow_horizontalGap="12dp"
            app:flow_verticalAlign="center"
            app:flow_wrapMode="chain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/questionText" />

        <TextView
            android:id="@+id/correctStateText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/yearButtonsFlow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:textColor="?attr/primary_color"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:text="Lorem ipsum"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submitButton"
            style="@style/App.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/correctStateText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/on_this_day_game_submit"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <org.wikipedia.views.WikiErrorView
        android:id="@+id/errorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
