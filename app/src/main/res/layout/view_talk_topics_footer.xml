<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/footerContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:colorBackground"
    android:paddingTop="24dp"
    android:paddingBottom="120dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:text="@string/talk_footer_about_this_talk_page"
        android:textColor="?attr/secondary_text_color"
        android:textAllCaps="true"
        android:letterSpacing="0.04"/>

    <LinearLayout
        android:id="@+id/viewEditHistoryContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?paper_color"
        android:foreground="?selectableItemBackground">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/talk_footer_view_edit_history"
            android:scaleType="center"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/ic_icon_revision_history_apps"
            app:tint="?attr/secondary_text_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/talk_footer_view_edit_history"
                android:textColor="?attr/primary_text_color"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/lastModifiedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/talk_footer_view_edit_history"
                android:layout_marginEnd="16dp"
                android:textColor="?attr/secondary_text_color"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewPageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?paper_color"
        android:foreground="?selectableItemBackground">

        <ImageView
            android:id="@+id/viewPageIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:contentDescription="@string/view_user_page"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_article_ltr_ooui"
            app:tint="?attr/secondary_text_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/viewPageTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/view_user_page"
                android:textColor="?attr/primary_text_color"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/viewPageContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/view_user_page"
                android:layout_marginEnd="16dp"
                android:textColor="?attr/secondary_text_color"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
