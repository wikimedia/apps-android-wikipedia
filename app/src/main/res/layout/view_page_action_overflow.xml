<?xml version="1.0" encoding="utf-8"?>
<org.wikipedia.views.WikiCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/overflow_card_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="-2dp"
    android:layout_marginEnd="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/paper_color"
        android:minWidth="180dp"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/overflow_forward"
            style="@style/OverflowMenuItem"
            android:text="@string/nav_item_forward"
            android:drawablePadding="16dp"
            app:drawableStartCompat="@drawable/ic_arrow_forward_black_24dp"
            app:drawableTint="?attr/material_theme_secondary_color"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/overflow_find_in_page"
            style="@style/OverflowMenuItem"
            android:text="@string/menu_page_find_in_page"
            android:drawablePadding="16dp"
            app:drawableStartCompat="@drawable/ic_find_in_page"
            app:drawableTint="?attr/material_theme_secondary_color"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/overflow_share"
            style="@style/OverflowMenuItem"
            android:text="@string/menu_page_share"
            android:drawablePadding="16dp"
            app:drawableStartCompat="@drawable/ic_share_white_24dp"
            app:drawableTint="?attr/material_theme_secondary_color"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/overflow_new_tab"
            style="@style/OverflowMenuItem"
            android:text="@string/menu_new_tab"
            android:drawablePadding="16dp"
            app:drawableStartCompat="@drawable/ic_add_gray_white_24dp"
            app:drawableTint="?attr/material_theme_secondary_color"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/overflow_feed"
            style="@style/OverflowMenuItem"
            android:text="@string/feed"
            android:drawablePadding="16dp"
            app:drawableStartCompat="@drawable/ic_globe"
            app:drawableTint="?attr/material_theme_secondary_color"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="?attr/paper_color">

            <TextView
                android:id="@+id/page_action_overflow_categories"
                style="@style/OverflowMenuItem"
                android:text="Categories"/>

        </LinearLayout>

    </LinearLayout>

</org.wikipedia.views.WikiCardView>