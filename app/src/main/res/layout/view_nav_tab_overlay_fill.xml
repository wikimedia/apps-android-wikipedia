<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/pulsingCircleOuter"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/shape_circle"
        android:tint="?attr/multi_select_background_color"
        android:contentDescription="@null"
        android:layout_gravity="center"
        />
    <ImageView
        android:id="@+id/pulsingCircleInner"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/shape_circle"
        android:tint="?attr/color_group_52"
        android:alpha="0.5"
        android:contentDescription="@null"
        android:layout_gravity="center"
        />
    <ImageView
        android:id="@+id/pulsingBaseIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_explore_black_24dp"
        android:tint="?attr/material_theme_primary_color"
        android:contentDescription="@null"
        android:layout_gravity="center"/>
</FrameLayout>
