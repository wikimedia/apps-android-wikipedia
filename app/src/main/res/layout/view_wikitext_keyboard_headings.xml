<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_width="wrap_content"
    tools:layout_height="wrap_content"
    tools:parentTag="android.widget.FrameLayout">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wikitext_button_h2"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="?attr/material_theme_primary_color"
            android:text="H2"
            tools:ignore="HardcodedText"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/wikitext_button_h3"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="?attr/material_theme_primary_color"
            android:text="H3"
            tools:ignore="HardcodedText"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/wikitext_button_h4"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="?attr/material_theme_primary_color"
            android:text="H4"
            tools:ignore="HardcodedText"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/wikitext_button_h5"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="?attr/material_theme_primary_color"
            android:text="H5"
            tools:ignore="HardcodedText"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/transparent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/color_group_60" />

    <View
        android:layout_width="1dp"
        android:layout_height="48dp"
        android:layout_gravity="end"
        android:layout_marginEnd="49dp"
        android:background="?attr/color_group_60" />

    <ImageView
        android:id="@+id/close_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:padding="12dp"
        android:layout_gravity="end"
        android:background="?attr/selectableItemBackground"
        app:srcCompat="@drawable/ic_close_black_24dp"
        app:tint="?attr/colorAccent"
        android:contentDescription="@string/table_close" />

</merge>