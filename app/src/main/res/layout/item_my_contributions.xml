<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="?attr/paper_color">

    <TextView
        android:id="@+id/languageCode"
        style="@style/TextViewCentered"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/lang_button_shape"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="true"
        android:textColor="@color/base100"
        android:textSize="14sp"
        app:backgroundTint="?attr/chart_shade5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="EN" />

    <TextView
        android:id="@+id/languageTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="?attr/material_theme_secondary_color"
        android:layout_gravity="center_vertical"
        android:lineSpacingExtra="4sp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/languageCode"
        app:layout_constraintEnd_toStartOf="@id/editCount"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="English"/>

    <TextView
        android:id="@+id/editCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="?attr/material_theme_secondary_color"
        android:layout_gravity="center_vertical"
        android:lineSpacingExtra="4sp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="3"/>

</android.support.constraint.ConstraintLayout>