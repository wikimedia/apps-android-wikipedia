<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_height="@dimen/list_item_default_height"
    tools:layout_width="match_parent"
    tools:parentTag="android.widget.LinearLayout">

    <TextView
        android:id="@+id/listItem"
        style="@style/OverflowMenuItem"
        android:layout_weight="1"
        android:drawablePadding="16dp"
        app:drawableStartCompat="@drawable/ic_history_24"
        app:drawableTint="?attr/primary_color" />

    <ImageView
        android:id="@+id/deleteIcon"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/reading_list_delete_lists_dialog_delete_button_text"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_close_black_24dp"
        app:tint="?android:attr/textColorTertiary" />

</merge>
