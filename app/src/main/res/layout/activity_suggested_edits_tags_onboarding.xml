<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/paper_color">

    <org.wikipedia.onboarding.OnboardingPageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:centeredImage="?attr/image_tags_onboarding_image"
        app:imageSize="160dp"
        app:primaryText="@string/suggested_edits_image_tags_onboarding_title"
        app:secondaryText="@string/suggested_edits_image_tags_onboarding_text"
        app:tertiaryText="@string/suggested_edits_image_tags_onboarding_note"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/onboarding_toolbar"
        style="@style/ToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/suggested_edits_tag_images"
        app:titleTextColor="?attr/main_toolbar_title_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="?attr/chart_shade5" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/onboarding_done_button"
                style="@style/TransparentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_gravity="end"
                android:text="@string/onboarding_get_started"
                android:textColor="?attr/colorAccent" />

        </FrameLayout>

    </LinearLayout>

</FrameLayout>
