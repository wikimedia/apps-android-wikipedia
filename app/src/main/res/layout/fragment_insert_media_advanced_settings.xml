<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/insertMediaPreviewContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/wrapImageSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/insert_media_advanced_settings_wrap_image"
            android:textColor="?attr/primary_text_color"
            android:layout_marginBottom="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="?attr/list_separator_drawable"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/imagePosition"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:textColor="?attr/primary_text_color"
                android:text="@string/insert_media_advanced_settings_image_position" />

            <TextView
                android:id="@+id/imagePositionButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:paddingVertical="16dp"
                android:textAlignment="textEnd"
                android:textColor="?attr/colorAccent"
                android:fontFamily="sans-serif-medium"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:text="@string/insert_media_advanced_settings_image_position_right" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="?attr/list_separator_drawable"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/imageType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:textColor="?attr/primary_text_color"
                android:text="@string/insert_media_advanced_settings_image_type" />

            <TextView
                android:id="@+id/imageTypeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:paddingVertical="16dp"
                android:textAlignment="textEnd"
                android:fontFamily="sans-serif-medium"
                android:textColor="?attr/colorAccent"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:text="@string/insert_media_advanced_settings_image_type_thumbnail" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="?attr/list_separator_drawable"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/imageSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:textColor="?attr/primary_text_color"
                android:text="@string/insert_media_advanced_settings_image_size" />

            <TextView
                android:id="@+id/imageSizeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:paddingVertical="16dp"
                android:textAlignment="textEnd"
                android:fontFamily="sans-serif-medium"
                android:textColor="?attr/colorAccent"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:text="@string/insert_media_advanced_settings_image_size_custom" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>