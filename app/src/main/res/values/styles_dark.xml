<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ThemeDark">

        <!-- Overrides of base Android color definitions -->

        <!-- Default background for all activities -->
        <item name="android:windowBackground">?attr/paper_color</item>

        <!-- Background for popup menus, text areas -->
        <item name="android:colorBackground">@color/gray675</item>

        <item name="android:textColorHint">@color/gray400</item>

        <!-- Toolbar color, list overscroll effect -->
        <item name="colorPrimary">@color/blue300</item>

        <!-- Error text in TextInputLayout -->
        <item name="colorError">@color/red75</item>

        <!-- Overrides of base Android styles with color sub-definitions -->
        <item name="actionOverflowMenuStyle">@style/Widget.AppCompat.PopupMenu.Overflow</item>
        <item name="popupMenuStyle">@style/PopupMenuDark</item>
        <item name="dialogTheme">@style/DialogDark</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogDark</item>

        <!-- Overrides of our own custom style attributes -->
        <item name="list_separator_drawable">@drawable/divider_dark</item>
        <item name="list_separator_drawable_bottom_content">@drawable/divider_bottom_content_dark</item>
        <item name="list_separator_drawable_light">@drawable/side_panel_divider_dark</item>
        <item name="talk_page_empty_state_drawable">@drawable/talk_page_empty_state_illustration_dark</item>

        <!-- Component updates -->
        <item name="paper_color">@color/gray700</item>
        <item name="background_color">@color/gray675</item>
        <item name="border_color">@color/gray650</item>
        <item name="inactive_color">@color/gray500</item>
        <item name="placeholder_color">@color/gray400</item>
        <item name="secondary_color">@color/gray300</item>
        <item name="primary_color">@color/gray200</item>
        <item name="progressive_color">@color/blue300</item>
        <item name="success_color">@color/green600</item>
        <item name="destructive_color">@color/red500</item>
        <item name="warning_color">@color/orange500</item>
        <item name="highlight_color">@color/yellow500_40</item>
        <item name="focus_color">@color/orange500_50</item>
        <item name="addition_color">@color/blue600_30</item>
        <!-- Component updates -->

        <!-- TODO: review and remove the old references/colors -->
        <!-- Overrides of our own custom color attributes -->
        <item name="nav_tab_background_color">@color/base18</item>
        <item name="nav_tab_item_color_state">@color/color_state_nav_tab_dark</item>
        <item name="searchItemBackground">@color/gray675</item>
        <item name="material_theme_primary_color">@color/white</item>
        <item name="material_theme_secondary_color">@color/white70</item>
        <item name="material_theme_de_emphasised_color">@color/white50</item>
        <item name="material_theme_border_color">@color/white20</item>
        <item name="secondary_text_color">@color/gray300</item>
        <item name="chart_shade4">@color/gray400</item>
        <item name="chart_shade5">@color/gray500</item>
        <item name="chart_shade7">@color/gray700</item>
        <item name="green_highlight_color">@color/green600</item>
        <item name="randomizer_dice_icon_color">@color/blue600</item>
        <item name="thumb_off_color">@color/gray300</item>
        <item name="track_off_color">@color/white</item>
        <item name="toc_h1_h2_color">@color/white</item>
        <item name="toc_scroller_button_color">@color/base18</item>
        <item name="button_background_color">@color/gray650</item>
        <item name="tab_placeholder_text_color">@color/gray700</item>
        <item name="chip_background_color">@color/gray600</item>
        <item name="image_tags_onboarding_image">@drawable/ic_image_tags_onboarding_dark</item>
        <item name="sync_reading_list_prompt_drawable">@drawable/ic_sync_illustration_dark</item>

        <!-- Background for cards, lists, and controls -->
        <item name="color_group_22">@color/base18</item>
        <item name="color_group_43">@color/green600</item>
        <item name="color_group_44">@color/red75</item>
        <item name="color_group_52">@color/blue300</item>
        <item name="color_group_57">@color/green700</item>
        <item name="color_group_58">@color/green600</item>
        <item name="color_group_60">@color/gray600</item>
        <item name="color_group_61">@color/gray500</item>
        <item name="color_group_63">@color/white50</item>
        <item name="color_group_65">@android:color/transparent</item>
        <item name="color_group_67">@android:color/transparent</item>
        <item name="color_group_68">@color/orange500</item>
        <item name="color_group_69">@color/green50_10d</item>
        <item name="color_group_70">@color/green20</item>
    </style>

    <style name="DialogDark" parent="Theme.MaterialComponents.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/blue300</item>
        <item name="android:colorBackground">?attr/paper_color</item>
        <item name="android:lineSpacingExtra">@dimen/dialog_line_spacing_extra</item>
    </style>

    <style name="PopupMenuDark" parent="Widget.AppCompat.PopupMenu">
        <item name="overlapAnchor">true</item>
    </style>

    <style name="BottomSheetDialogDark" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetModalStyle</item>
        <item name="colorAccent">@color/blue300</item>
        <item name="colorPrimary">@color/blue300</item>
        <item name="colorSwitchThumbNormal">@color/gray100</item>
        <item name="android:colorBackground">?attr/paper_color</item>
        <item name="android:disabledAlpha">1.0</item>
    </style>

    <style name="ThemeDark.Translucent">
        <item name="android:windowBackground">@color/black87</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorAccent">@color/blue600</item>
    </style>

</resources>
