    <style name="TextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:textColor">?attr/primary_color</item>
        <item name="android:textColorHint">?attr/placeholder_color</item>
        <item name="boxBackgroundColor">?attr/background_color</item>
        <item name="boxStrokeColor">?attr/input_stroke_color_state</item>
        <item name="hintTextColor">?attr/progressive_color</item>
        <item name="helperTextTextColor">?attr/placeholder_color</item>
        <item name="counterTextColor">?attr/placeholder_color</item>
        <item name="errorTextAppearance">@style/TextInputLayoutErrorTextAppearance</item>
