        <item name="background_color">@color/gray100</item>
        <item name="border_color">@color/gray200</item>
        <item name="inactive_color">@color/gray400</item>
        <item name="placeholder_color">@color/gray500</item>
        <item name="secondary_color">@color/gray600</item>
        <item name="primary_color">@color/gray700</item>
        <item name="progressive_color">@color/blue600</item>
        <item name="success_color">@color/green700</item>
        <item name="destructive_color">@color/red700</item>
        <item name="warning_color">@color/yellow700</item>
        <item name="highlight_color">@color/yellow500</item>
        <item name="focus_color">@color/orange500</item>
        <item name="addition_color">@color/blue300_15</item>
        <item name="overlay_color">@color/black_30</item>
        <item name="list_divider">@drawable/divider_light</item>
        <item name="shadow_border">@drawable/shadow_light</item>

        <item name="input_stroke_color_state">@color/color_state_input_field_light</item>
        <item name="image_tags_onboarding_drawables">@drawable/ic_image_tags_onboarding_light</item>
        <item name="sync_reading_list_prompt_drawable">@drawable/ic_sync_illustration_light</item>

    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:navigationBarColor">@color/gray700</item>
    </style>

    <style name="AppTheme.ActionBar">
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="windowActionModeOverlay">false</item>

        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="actionBarTheme">@style/ActionBarTheme</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.FullScreen.Translucent">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="H1">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">32sp</item>
    </style>

    <style name="H1.AppBar">
        <item name="lineHeight">24sp</item>
    </style>

    <style name="H1.Article">
        <item name="android:fontFamily">serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="H2">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">28sp</item>
    </style>

    <style name="H2.AppBar">
        <item name="lineHeight">24sp</item>
    </style>

    <style name="H2.DialogTitle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">28sp</item>
        <item name="android:textColor">?attr/primary_color</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="H2.MessageCard">
        <item name="android:textColor">?attr/primary_color</item>
    </style>

    <style name="H3">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="H3.MaterialListTitle">
        <item name="android:textColor">?attr/primary_color</item>
    </style>

    <style name="H3.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="H3.Article">
        <item name="android:fontFamily">serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">32sp</item>
    </style>

    <style name="H4">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="H4.MaterialListSectionHeader">
        <item name="android:textColor">?attr/primary_color</item>
    </style>

    <style name="H5">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">18sp</item>
    </style>

    <style name="P">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="P.Article">
        <item name="lineHeight">28sp</item>
    </style>

    <style name="P.DialogBody" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:textColor">?attr/secondary_color</item>
    </style>

    <style name="P.MaterialListTitle">
        <item name="android:textColor">?attr/primary_color</item>
    </style>

    <style name="App.Snackbar" parent="Widget.Material3.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="ThemeOverlay.Material3.Snackbar">
        <item name="colorSurfaceInverse">?attr/border_color</item>
    </style>

    <style name="SnackbarTextView" parent="Widget.Material3.Snackbar.TextView">
        <item name="android:textColor">?attr/primary_color</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:maxLines">10</item>
        <item name="lineHeight">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="SnackbarButton" parent="Widget.Material3.Button.TextButton.Snackbar">
        <item name="android:textColor">?attr/progressive_color</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="Chip">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="Chip.Accessible">
        <item name="chipBackgroundColor">?attr/background_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">?attr/border_color</item>
        <item name="android:textColor">?attr/primary_color</item>
        <item name="ensureMinTouchTargetSize">true</item>
        <item name="chipMinTouchTargetSize">48dp</item>
    </style>

    <style name="Chip.Accessible.Icon">
        <item name="chipIconSize">14dp</item>
        <item name="chipIconTint">?attr/primary_color</item>
        <item name="chipIconVisible">true</item>
        <item name="iconStartPadding">12dp</item>
        <item name="iconGravity">start</item>
    </style>

    <style name="List">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/primary_color</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="List.MaterialListSubtitle">
        <item name="android:textColor">?attr/secondary_color</item>
    </style>

    <style name="Small">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">18sp</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.Material3.PopupMenu">
        <item name="overlapAnchor">true</item>
    </style>

    <style name="ActionBarStyle" parent="@style/Widget.Material3.Light.ActionBar.Solid">
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
        <item name="elevation">0dp</item>
        <item name="background">?attr/paper_color</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="titleTextStyle">@style/H1.AppBar</item>
        <item name="android:titleTextStyle">@style/H1.AppBar</item>
    </style>

    <style name="ActionBarTheme" parent="@style/ThemeOverlay.Material3.ActionBar">
        <item name="colorControlNormal">?attr/primary_color</item>
    </style>

    <style name="ToolbarStyle" parent="@style/Widget.Material3.Toolbar">
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
        <item name="navigationIconTint">?attr/primary_color</item>
        <item name="elevation">4dp</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/black</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/black</item>
        <item name="android:background">?attr/paper_color</item>
        <item name="titleTextColor">?attr/primary_color</item>
        <item name="titleTextAppearance">@style/H1.AppBar</item>
    </style>

    <style name="ToolbarStyle.Small">
        <item name="titleTextAppearance">@style/H2.AppBar</item>
    </style>

    <style name="ToolbarStyle.Tabs" parent="@style/Widget.Material3.Toolbar">
        <item name="navigationIcon">@drawable/ic_add_gray_white_24dp</item>
        <item name="navigationIconTint">?attr/primary_color</item>
        <item name="navigationContentDescription">@string/menu_new_tab</item>
    </style>

    <style name="ActionModeStyle" parent="@style/Widget.Material3.ActionMode">
        <item name="background">?attr/paper_color</item>
        <item name="backgroundSplit">?attr/paper_color</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="BottomNavigationTextAppearance">
        <item name="android:textSize">@dimen/bottom_nav_label_text_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="lineHeight">12sp</item>
        <item name="maxLines">2</item>
    </style>

    <style name="BottomNavigationTextAppearance.Active">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ListView" parent="@style/Widget.AppCompat.ListView">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="RtlAwareTextView" parent="@android:style/Widget.TextView">
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TextViewCentered" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SideDrawerMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="OverflowMenuItem" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textColor">?attr/primary_color</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="App.Button" parent="@style/Widget.Material3.Button">
        <item name="backgroundTint">?attr/progressive_color</item>
        <item name="iconTint">@color/white</item>
        <item name="iconSize">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="rippleColor">?attr/placeholder_color</item>
    </style>

    <style name="App.Button.Secondary">
        <item name="backgroundTint">?attr/background_color</item>
        <item name="iconTint">?attr/progressive_color</item>
        <item name="android:textColor">?attr/progressive_color</item>
    </style>

    <style name="App.Button.Tertiary">
        <item name="backgroundTint">?attr/background_color</item>
        <item name="iconTint">?attr/placeholder_color</item>
        <item name="android:textColor">?attr/placeholder_color</item>
    </style>

    <style name="App.Button.Text">
        <item name="elevation">0dp</item>
        <item name="android:textColor">?attr/progressive_color</item>
        <item name="iconTint">?attr/progressive_color</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <style name="App.Button.Text.Secondary">
        <item name="android:textColor">?attr/placeholder_color</item>
        <item name="iconTint">?attr/placeholder_color</item>
    </style>

